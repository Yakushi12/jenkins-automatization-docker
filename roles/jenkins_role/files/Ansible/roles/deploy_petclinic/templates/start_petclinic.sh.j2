#!/usr/bin/env bash

url=$(gcloud secrets versions access "{{version_id}}" --secret="mysql_ip")
username=$(gcloud secrets versions access "{{version_id}}" --secret="mysql_user")
password=$(gcloud secrets versions access "{{version_id}}" --secret="mysql_pass")

/usr/bin/java -jar '{{ petclinic_path }}' --spring.profiles.active=mysql --spring.jpa.hibernate.ddl-auto=update --spring.datasource.url=jdbc:mysql://${url}?useSSL=false --spring.datasource.username="$username" --spring.datasource.password="$password" --spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQL5Dialect


