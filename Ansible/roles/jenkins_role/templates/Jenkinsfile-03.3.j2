pipeline {

  agent {
      label "master"
  }

  options {
      ansiColor('xterm')
  }

  stages {
    stage("clone code") {
      steps {
        script {
          git credentialsId: "{{ credentials }}",
          branch: "{{ targetBranch }}",
          url: "{{ gitCIurl }}";
        }
      }
    }
    stage('Create Packer AMI') {
      steps {
        dir('Terraform/Dev') {
          sh("gcloud secrets versions access latest --secret='{{ service_acc_key }}' > account.json")
          sh("terraform init")
          sh("terraform apply -auto-approve")
        }
      }
    }
  }

  post {
    cleanup {
      cleanWs()
    }
  }
}
