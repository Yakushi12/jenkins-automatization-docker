#!/usr/bin/env bash

url=$(gcloud secrets versions access "{{version_id}}" --secret="mysql_ip")
password=$(gcloud secrets versions access "{{version_id}}" --secret="DB_PASS")

/usr/bin/java -jar '{{ petclinic_path }}' --spring.profiles.active='{{ profile }}' --spring.jpa.hibernate.ddl-auto=update --spring.datasource.url=jdbc:'{{ profile }}'://${url}:'{{ mysql_port }}'/'{{ mysql_db_name }}'?useSSL=false --spring.datasource.username='{{ mysql_user }}' --spring.datasource.password="$password" --spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQL5Dialect


